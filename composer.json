{
  "name": "ludo/framework",
  "description": "The Ludo-PHP Framework",
  "license": "MIT",
  "authors": [
    {
      "name": "zhang bin",
      "email": "hunter.zhangbin@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ezyang/htmlpurifier": ">=4.6",
    "phpmailer/phpmailer": "5.2.*",
    "ext-redis": "*",
    "symfony/console": "^4.3",
    "ext-pdo": "*",
    "ext-openssl": "*",
    "ext-json": "*",
    "monolog/monolog": "^2.0",
    "phpdocumentor/reflection-docblock": "^4.3"
  },
  "autoload": {
    "files": [
      "src/Ludo/Support/helpers.php",
      "src/Ludo/Utils/Functions.php"
    ],
    "psr-4": {
      "Ludo\\": "src/Ludo/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LudoTest\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "^8.3"
  }
}
